@model BugTracker.Models.TicketModel

@{
    ViewData["Title"] = "Tickets";
}

<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

        <!-- Begin Page Content -->
        <div class="container-fluid">



            <h4>TicketModel</h4>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="ProcessCreate">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="TicketName" class="control-label"></label>
                            <input asp-for="TicketName" class="form-control" />
                            <span asp-validation-for="TicketName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TicketType" class="control-label"></label>
                            <select asp-for="TicketType" class="custom-select">
                                <option hidden disabled selected> - wählen Sie eine Option - </option>
                                <option value="Incident">Bug</option>
                                <option value="Change Request">Änderungsanforderung</option>
                                <option value="Request for Enhancement">Verbesserung</option>
                            </select>
                            <span asp-validation-for="TicketType" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TicketDescription" class="control-label"></label>
                            <input asp-for="TicketDescription" class="form-control" />
                            <span asp-validation-for="TicketDescription" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TicketStatus" class="control-label"></label>
                            <select asp-for="TicketStatus" class="custom-select">
                                <option hidden disabled selected> - wählen Sie eine Option - </option>
                                <option value="Open">Offen</option>
                                <option value="In Progress">In Bearbeitung</option>
                                <option value="Additional Info Required">Zusätzliche Informationen benötigt</option>
                                <option value="Resolved">Abgeschlossen</option>
                            </select>
                            <span asp-validation-for="TicketStatus" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="TicketPriority" class="control-label"></label>
                            <select asp-for="TicketPriority" class="custom-select">
                                <option hidden disabled selected> - wählen Sie eine Option - </option>
                                <option value="High">Hoch</option>
                                <option value="Medium">Mittel</option>
                                <option value="Low">Niedrig</option>
                            </select>
                            <span asp-validation-for="TicketPriority" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ProjectName" class="control-label"></label>
                            <select asp-for="ProjectName" class="custom-select">
                                <option hidden disabled selected> - wählen Sie eine Option - </option>
                                @foreach (string item in Model.ProjectNameList)
                                {
                                    <option value="@item">@item</option>
                                }
                            </select>
                            <span asp-validation-for="ProjectName" class="text-danger"></span>
                        </div>
                        @Html.HiddenFor(model => model.SubmitterId)
                        <div class="form-group">
                            <label asp-for="Dev" class="control-label"></label>
                            <select asp-for="Dev" class="custom-select">
                                <option hidden disabled selected> - wählen Sie eine Option - </option>
                                @foreach (string item in Model.DevList)
                                {
                                    <option value="@item">@item</option>
                                }
                            </select>
                            <span asp-validation-for="Dev" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">Back to List</a>
            </div>



        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->
</div>
<!-- End of Content Wrapper -->



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
