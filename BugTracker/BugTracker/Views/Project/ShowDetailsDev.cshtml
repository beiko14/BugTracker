@model dynamic

@{
    ViewData["Title"] = "Projekte";
}

<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

        <!-- Begin Page Content -->
        <div class="container-fluid">



            <!-- Page Heading -->
            <h1 class="h3 mb-2 text-gray-800">Detailansicht: Projekt</h1>
            <p></p>

            <!-- Basic Card Example -->
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">@Model.foundProject.Name</h6>
                    <p></p>
                    <a asp-action="Index">Zurück zur Liste</a>
                </div>
                <div class="card-body">

                    <!-- Page Heading -->
                    <p class="mb-2">Beschreibung:</p>
                    <p class="mb-4">
                        @Model.foundProject.Description
                    </p>

                    <div class="row">
                        <div class="col-lg-4">
                            <!-- DataTales Example -->
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary">Zugewiesene Personen</h6>
                                    Derzeitige Nutzer des Projektes:
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        Email
                                                    </th>
                                                    <th>
                                                        Name
                                                    </th>
                                                    <th>
                                                        Rolle
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (UserModel item in Model.foundData)
                                                {
                                                    <tr>
                                                        <td>
                                                            @item.EmailAddress
                                                        </td>
                                                        <td>
                                                            @item.FullName
                                                        </td>
                                                        <td>
                                                            @item.Role
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-8">
                            <!-- DataTales Example -->
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary">Tickets für dieses Projekt</h6>
                                    Zusammenfassung der Ticketdetails:
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-bordered" id="dataTableDetails2" width="100%" cellspacing="0">
                                            <thead>
                                                <tr>
                                                    <th>
                                                        Titel
                                                    </th>
                                                    <th>
                                                        Ersteller
                                                    </th>
                                                    <th>
                                                        Entwickler
                                                    </th>
                                                    <th>
                                                        Status
                                                    </th>
                                                    <th>
                                                        Erstellt am:
                                                    </th>
                                                    <th></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (TicketModel item in Model.foundTickets)
                                                {
                                                    <tr>
                                                        <td>
                                                            @item.TicketName
                                                        </td>
                                                        <td>
                                                            @item.Submitter
                                                        </td>
                                                        <td>
                                                            @item.Dev
                                                        </td>
                                                        <td>
                                                            @item.TicketStatus
                                                        </td>
                                                        <td>
                                                            @item.TicketStart
                                                        </td>
                                                        <td>
                                                            @*@Html.ActionLink("Mehr Details", "asdf", new { id = item.TicketId })*@
                                                            @Html.ActionLink("Mehr Details", "ShowDetails", "Ticket", new { id = item.TicketId })
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>





        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->

</div>
<!-- End of Content Wrapper -->
<!-- Logout Modal-->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">@Model.foundProject.Name wirklich löschen?</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">Wählen Sie "Löschen", wenn Sie dieses Projekt entgültig löschen möchten.</div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Abbrechen</button>
                <a class="btn btn-primary" href="@Url.Action("Delete", "Project", new { id = Model.foundProject.Id })">Löschen</a>
            </div>
        </div>
    </div>
</div>

<!-- Page level plugins -->
<script src="~/theme/vendor/datatables/jquery.dataTables.min.js"></script>
<script src="~/theme/vendor/datatables/dataTables.bootstrap4.min.js"></script>

<!-- Page level custom scripts -->
<script src="~/theme/js/datatable-searchUnSo.js"></script>

<!-- Custom styles for this page -->
<link href="~/theme/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">