@{
    ViewData["Title"] = "Dashboard";
}

<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

        <!-- Begin Page Content -->
        <div class="container-fluid">


            <!-- Page Heading -->
            <h1 class="h3 mb-2 text-gray-800">Dashboard</h1>
            <p class="mb-4">
                Visualisierung einiger Datenbankeinträge.
                </a>
            </p>

            <!-- Content Row -->
            <div class="row">

                <div class="col-xl-8 col-lg-7">

                    <!-- Bar Chart -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Tickets nach Priorität</h6>
                        </div>
                        <div class="card-body">
                            <div class="chart-bar">
                                <canvas id="ticketsByPriorityChart"></canvas>
                            </div>
                        </div>
                    </div>

                </div>

                <!-- Donut Chart -->
                <div class="col-xl-4 col-lg-5">

                    <div class="card shadow mb-4">
                        <!-- Card Header - Dropdown -->
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Ticket nach Typ</h6>
                        </div>
                        <!-- Card Body -->
                        <div class="card-body">
                            <div class="chart-pie pt-4">
                                <canvas id="ticketByType"></canvas>
                            </div>
                            <p></p>
                        </div>
                    </div>

                </div>

            </div>

            <!-- Content Row -->
            <div class="row">

                <div class="col-xl-8 col-lg-7">

                    <!-- Bar Chart -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Tickets nach Status</h6>
                        </div>
                        <div class="card-body">
                            <div class="chart-bar">
                                <canvas id="ticketsByStatus"></canvas>
                            </div>
                        </div>
                    </div>

                </div>

                <!-- Donut Chart -->
                <div class="col-xl-4 col-lg-5">

                    <div class="card shadow mb-4">
                        <!-- Card Header - Dropdown -->
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Admin-Developer-Verhältnis</h6>
                        </div>
                        <!-- Card Body -->
                        <div class="card-body">
                            <div class="chart-pie pt-4">
                                <canvas id="adminDevRatio"></canvas>
                            </div>
                            <p></p>
                        </div>
                    </div>

                </div>

            </div>


        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->

</div>
<!-- End of Content Wrapper -->


<script src="~/theme/js/ticketsByPriority.js"></script>
<script src="~/theme/js/ticketsByStatus.js"></script>
<script src="~/theme/js/ticketsByType.js"></script>
<script src="~/theme/js/adminDevRatio.js"></script>

